<tr>
	<th>1</th>
	<td>
		<img src="uploads/products/{{ product.illustration }}" alt="{{ product.name }}"/>
	</td>
	<td>{{ product.name }}</td>
	<td>
		<div class="row">
			<button {# href="{{path('app_cart_add',{ 'id' : product.id})}}" #}>
				<svg height="38" viewbox="0 0 48 48" width="38" xmlns="http://www.w3.org/2000/svg">
					<path d="M0 0h48v48h-48z" fill="none"/>
					<path d="M24 4c-11.05 0-20 8.95-20 20s8.95 20 20 20 20-8.95 20-20-8.95-20-20-20zm10 22h-8v8h-4v-8h-8v-4h8v-8h4v8h8v4z"/>
				</svg>
			</button>
			<span id="quantity_{{product.id}}">{{ product.quantity }}</span>
			<a href="{{path('app_cart_add',{ 'id' : product.id})}}">
				<svg height="38" viewbox="0 0 48 48" width="38" xmlns="http://www.w3.org/2000/svg">
					<path d="M0 0h48v48h-48z" fill="none"/>
					<path d="M24 4c-11.05 0-20 8.95-20 20s8.95 20 20 20 20-8.95 20-20-8.95-20-20-20zm10 22h-20v-4h20v4z"/>
				</svg>
			</a>
		</div>
	</td>
	<td><span id="total_{{product.id}}">{{ (product.price * product.quantity )|number_format(2, ',', '.') }}</span>
		FCFA</td>
</tr>
